{
    "include": [
        "app/**/*.ts",
        "app/**/*.tsx",
        "app/**/*.js",
    ],
    "compilerOptions": {
        "baseUrl": "app/scripts",
        "sourceMap": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "jsx": "react"
    }
}